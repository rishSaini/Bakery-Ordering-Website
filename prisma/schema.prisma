datasource db {
  provider = "postgresql"
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
  engineType      = "client"
}

enum InquiryType {
  CONTACT
  CUSTOM_ORDER
}

enum InquiryStatus {
  OPEN
  RESOLVED
}

model Inquiry {
  id        String        @id @default(cuid())
  createdAt DateTime      @default(now())

  type      InquiryType   @default(CONTACT)
  status    InquiryStatus @default(OPEN)

  // resolution fields (for your admin resolve flow)
  resolutionNote String?
  resolvedAt      DateTime?

  // contact details
  name      String
  email     String
  phone     String?
  preferredContactMethod String @default("EMAIL")

  // helpful column for sorting/filters
  requestedFor DateTime?

  // flexible payload for custom-order specifics
  payload   Json?

  message String?
}

model GalleryImage {
  id        String   @id @default(uuid()) @db.Uuid
  title     String?
  imageUrl  String   @unique
  createdAt DateTime @default(now())
  category  String 
}

model Product {
  id         String   @id @default(dbgenerated("gen_random_uuid()::text"))
  name       String
  priceCents Int
  category   String
  imageUrl   String
  popularity Int      @default(0)
  badge      String?
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
}

